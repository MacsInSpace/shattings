#!/bin/sh

#set -x

cd $(git rev-parse --show-toplevel)

cp .git/HEAD .git/PREV_HEAD || {
	exit 1
}

git stash -q || {
	exit 1
}

git checkout -q HEAD^{}

if git apply-selected
then git difftool -y -x opendiff PREV_HEAD
else git am --abort
fi

cp .git/PREV_HEAD .git/HEAD
git reset --hard
git stash pop -q
